@model List<Product>
@{ 
    ViewBag.Title = "Product List";
}
<h2>Product List</h2>
<a asp-controller="Product" asp-action="Add">Add New Product</a>
<table class="table table-bortdered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in Model)
            {
        <tr>
            <td>@prod.Name</td>
            <td>@prod.Price</td>
            <td>@prod.Quantity</td>
            <td>
                <a asp-controller="Product" asp-action="Edit"
                   asp-route-id="@prod.Id">Edit | </a>
                <a asp-controller="Product" asp-action="Delete"
                   asp-route-id="@prod.Id">Delete</a>
            </td>
        </tr>
            }
    </tbody>
</table>
