@model Product
    
        @{
            ViewBag.Title = "Delete Product";
        }
<style>
    .pt-6 {
        margin-top: 4rem;
    }
</style>
<div class="container pt-6 text-center">
    <h2>Confirm Deletion</h2>
    <h3>@Model.Name</h3>
    <form asp-action="Delete" method="post">

        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Cancel</a>
    </form>
</div>